@model GameCollectorsHub.Web.ViewModels.Amiibo.AllAmiibosViewModel
@{
    ViewData["Title"] = "Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container bg-dark">
        <div class="text-center">
            <h1>All @Model.Amiibos.FirstOrDefault().SeriesName Amiibos</h1>
        </div>

        <div class="py-5">
            <div class="row">
                @foreach (var amiibo in Model.Amiibos)
                {
                    <div class="col-lg-3 col-md-3 col-sm-12 mt-4 text-center">
                        <div class="ml-4">
                            <a asp-action="Details" asp-route-id="@amiibo.Id"><img src="@amiibo.ImgUrl" class="card-img" alt="@amiibo.Name" style="max-width: 100px; max-height: 200px;"></a>
                            <div>
                                <div class="text-center">
                                    <h2 class="card-title text-center mt-2">@amiibo.Name</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

