@model GameCollectorsHub.Web.ViewModels.GameCollection.GameCollectionDetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark row">
    <div class="col-md-6 px-0">
        <img src="@Model.GameImgUrl" style="max-width: 350px; max-height: 350px" />
    </div>
    <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic"><a asp-controller="Game" asp-action="Details" asp-route-id="@Model.GameId">@Model.GameName</a> for @Model.PlatformName</h1>
        <div>
            <h2 class="lead">Current Value: @Model.Value $</h2>
            <p class="lead">Your Cost: @Model.Cost $</p>
            <p class="lead">Includes: @Model.WhatIncludes</p>
            <p class="lead">Condition: @Model.Condition</p>
            <a asp-action="Edit" asp-route-gameId="@Model.GameId">Edit Details</a> |
            <a asp-action="Delete" asp-route-gameId="@Model.GameId">Remove</a>
        </div>
    </div>
</div>

