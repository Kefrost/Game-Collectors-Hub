@model GameCollectorsHub.Web.ViewModels.GameCollection.AllGameCollectionViewModel
@{
    ViewData["Title"] = "AllCollection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container bg-light">
        <h1>Your Game Collection</h1>
        <h3>Collection Value: @Model.CollectionValue</h3>
        <h3>Collection Cost: @Model.TotalYouPaid</h3>
        <h3>Items in collection: @Model.ItemsInCollection</h3>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Game Title</th>
                        <th>Cost</th>
                        <th>Value</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in Model.GameCollectionItems)
                    {
                        <tr>
                            <td>@game.GameImgUrl</td>
                            <td>@game.GameName (@game.PlatformName)</td>
                            <td>@game.Cost</td>
                            <td>@game.Value</td>
                            <td>
                                <a>Edit Details</a>
                                <a>Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



