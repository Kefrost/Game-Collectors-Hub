@model GameCollectorsHub.Web.ViewModels.ConsoleCollection.AllConsoleCollectionViewModel
@{
    ViewData["Title"] = "AllCollection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container bg-dark">
        <h1>Your Console Collection</h1>
        <h4>Collection Cost: @Model.TotalYouPaid.ToString("F2") $</h4>
        <h4>Items in collection: @Model.ItemsInCollection</h4>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Console Name</th>
                        <th>Cost</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var console in Model.ConsoleCollectionItems)
                    {
                        <tr>
                            <td><img src="@console.ConsoleImgUrl" style="max-height: 85px; max-width: 85px;" /></td>
                            <td><a asp-action="Details" asp-route-consoleId="@console.ConsoleId">@console.ConsoleName @console.Model</a></td>
                            <td>@console.Cost.ToString("F2") $</td>
                            <td>
                                <a asp-action="Edit" asp-route-consoleId="@console.ConsoleId">Edit Details</a> | 
                                <a asp-action="Delete" asp-route-consoleId="@console.ConsoleId">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



