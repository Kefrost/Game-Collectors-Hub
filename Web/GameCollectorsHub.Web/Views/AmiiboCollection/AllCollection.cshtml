@model GameCollectorsHub.Web.ViewModels.AmiiboCollection.AllAmiiboCollectionViewModel
@{
    ViewData["Title"] = "AllCollection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container bg-dark">
        <h1>Your Amiibo Collection</h1>
        <h4>Collection Value: @Model.CollectionValue.ToString("F2") $</h4>
        <h4>Collection Cost: @Model.TotalYouPaid.ToString("F2") $</h4>
        <h4>Items in collection: @Model.ItemsInCollection</h4>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Amiibo Name</th>
                        <th>Cost</th>
                        <th>Value</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var amiibo in Model.AmiiboCollectionItems)
                    {
                        <tr>
                            <td><img src="@amiibo.AmiiboImgUrl" style="max-height: 85px; max-width: 85px;" /></td>
                            <td><a asp-action="Details" asp-route-amiiboId="@amiibo.AmiiboId">@amiibo.AmiiboName (@amiibo.AmiiboSeries series)</a></td>
                            <td>@amiibo.Cost.ToString("F2") $</td>
                            <td>@amiibo.Value</td>
                            <td>
                                <a asp-action="Edit" asp-route-amiiboId="@amiibo.AmiiboId">Edit Details</a> | 
                                <a asp-action="Delete" asp-route-amiiboId="@amiibo.AmiiboId">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



